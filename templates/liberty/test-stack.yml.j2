heat_template_version: 2014-10-16
description: A simple server.

resources:
  server:
    type: OS::Nova::Server
    properties:
      image: {{ image_id }}
      flavor: {{ flavor }}
      networks:
      - network: {{ net_id }}

outputs:
  private_ip:
    description: IP address of the server in the private network
    value: { get_attr: [ server, first_address ] }
